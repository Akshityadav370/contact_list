<html>
    <head>
        <title>
            <%= title %>
        </title>
        <link rel="stylesheet" href="/css/contacts.css">
    </head>
    <body>
        <div id="contacts">
        <div id="heading">
            <i class="fas fa-address-book"></i>
            <h1>My Contacts List</h1>
        </div>
        <div id="contacts-container">
            <ul>
                <% for(let i of contact_list) { %>
                    <div id="li-container">
                    <li>
                        <div id="name-phone">
                        <div id="name" class="change-hover">
                            <p><%= i.name %></p>
                        </div>
                        <div id="phone" class="change-hover">
                            <p><%= i.phone %></p>
                        </div>
                        </div>
                        <div class="delete">
                            <!-- <a href="/delete-contact/?phone=<%= i.phone %>&name=<%= i.name %>">
                                 -->
                                <!-- <a href="/delete-contact/?phone=<%= i.phone %>"> -->
                                <a href="/delete-contact/?id=<%= i._id %>">
                                    <i class="fas fa-window-close"></i>
                                </a>
                        </div>
                    </li>
                    </div>
                <% } %>
            </ul>
        </div>
        <div id="input-contact">
            <form action="/create-contact" method="post">
                <input class="form-input" type="text" name="name" placeholder="Enter name" required>
                <input class="form-input" type="number" name="phone" placeholder="Enter phone" required><br>
                <button type="submit">Add Contact</button>
            </form>     
        </div>
        </div>
        <script src="https://kit.fontawesome.com/8fcf9c8220.js" crossorigin="anonymous"></script>
    </body>
</html>